FROM php:8.0-fpm

RUN apt update \
    && apt install -y zlib1g-dev g++ npm wget make libicu-dev zip libzip-dev zip \
    && docker-php-ext-install intl opcache pdo pdo_mysql \
    && pecl install apcu \
    && docker-php-ext-enable apcu \
    && docker-php-ext-configure zip \
    && docker-php-ext-install zip

RUN wget https://github.com/elastic/apm-agent-php/releases/download/v1.5/apm-agent-php_1.5_all.deb
RUN dpkg -i apm-agent-php_1.5_all.deb

COPY /php/local.ini /usr/local/etc/php/conf.d/local.ini

WORKDIR /var/www/app

RUN curl -sS https://get.symfony.com/cli/installer | bash
RUN mv /root/.symfony/bin/symfony /usr/local/bin/symfony

