<!-- bootstrap mail template --->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sauvegarde du menu</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            <i class="fa fa-envelope"></i>
                            Vos menus de la semaine
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Jour</th>
                                            <th>Menu Midi</th>
                                            <th>Menu Soir</th>
                                            <th>Ingrédients</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    {% for i in range (0, nb_jours) %}
                                        <tr>
                                            <td style="font: bold">{{ "now"| date_modify("+" ~ i ~ " day") | date("l","Europe/Paris") }}</td>
                                            <td>{{ entrees[i].name }} / {{ plats[i].name }} / {{ desserts[i].name }}</td>
                                            <td>{{ entrees[i+nb_jours-1].name }} / {{ plats[i+nb_jours-1].name }} / {{ desserts[i+nb_jours-1].name }}</td>
                                            <td>
                                                <ul>
                                                    <li>Entrées</li>
                                                    {% for ingredient in entrees[i].ingredients %}
                                                        <li>{{ ingredient.ingredient.name }}</li>
                                                    {% endfor %}
                                                </ul>

                                                <ul>
                                                    <li>Plats</li>
                                                    {% for ingredient in plats[i].ingredients %}
                                                        <li>{{ ingredient.ingredient.name }}</li>
                                                    {% endfor %}
                                                </ul>

                                                <ul>
                                                    <li>Desserts</li>
                                                    {% for ingredient in desserts[i].ingredients %}
                                                        <li>{{ ingredient.ingredient.name }}</li>
                                                    {% endfor %}
                                                </ul>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>