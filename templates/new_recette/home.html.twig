{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            {{ form_start(form) }}

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Filtres</button>
                    <ul class="dropdown-menu w-100">
                        <li class="dropdown-item">
                            <div class="accordion accordion-flush" id="accordionFlushExample">
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header1',
                                    headerContent: form_label(form.type),
                                    bodyId: 'body1',
                                    bodyContent: form_widget(form.type)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'headerTags',
                                    headerContent: form_label(form.tags),
                                    bodyId: 'bodyTags',
                                    bodyContent: form_widget(form.tags)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header2',
                                    headerContent: form_label(form.difficulty),
                                    bodyId: 'body2',
                                    bodyContent: form_widget(form.difficulty)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header3',
                                    headerContent: form_label(form.budget),
                                    bodyId: 'body3',
                                    bodyContent: form_widget(form.budget)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header4',
                                    headerContent: form_label(form.minRate) ~ ' / ' ~ form_label(form.maxRate),
                                    bodyId: 'body4',
                                    bodyContent: form_widget(form.minRate) ~ '<br>' ~ form_widget(form.maxRate)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header5',
                                    headerContent: form_label(form.maxDuration),
                                    bodyId: 'body5',
                                    bodyContent: form_widget(form.maxDuration)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header6',
                                    headerContent: form_label(form.number_of_persons),
                                    bodyId: 'body6',
                                    bodyContent: form_widget(form.number_of_persons)
                                } %}
                            </div>
                        </li>
                    </ul>
                </div>
                {{ form_widget(form.name) }}
                <div class="input-group-append">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="row">
            {% for recette in recettes %}
                {% include 'components/recipe_thumbnail.html.twig' with {recipe: recette} %}
            {% endfor %}
        </div>

        <div class="row offset-4">
            {{ knp_pagination_render(recettes, '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('new_recette_home') }}
{% endblock %}
