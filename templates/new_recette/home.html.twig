{% extends 'base.html.twig' %}

{% block title %}Liste des recettes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            {{ form_start(form) }}

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" aria-haspopup="true" aria-expanded="false">Filtres</button>
                    <ul id="cascade" class="w-100" style="display: none;position: absolute; inset: 0 auto auto 0; margin: 0; transform: translate(0,40px); z-index: 1000; padding: 0 0; text-align: left; list-style: none">
                        <li class="p-0 shadow-lg" style="display: block; width: 100%; clear: both; text-align: inherit; text-decoration: none; white-space: nowrap; border: 0; background-color: transparent">
                            <div class="accordion accordion-flush" id="accordionFlushExample">
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header1',
                                    headerContent: form_label(form.type),
                                    bodyId: 'body1',
                                    bodyContent: form_widget(form.type)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'headerIngredients',
                                    headerContent: form_label(form.ingredients),
                                    bodyId: 'bodyIngredients',
                                    bodyContent: form_widget(form.ingredients)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'headerTags',
                                    headerContent: form_label(form.tags),
                                    bodyId: 'bodyTags',
                                    bodyContent: form_widget(form.tags)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header2',
                                    headerContent: form_label(form.difficulty),
                                    bodyId: 'body2',
                                    bodyContent: form_widget(form.difficulty)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header3',
                                    headerContent: form_label(form.budget),
                                    bodyId: 'body3',
                                    bodyContent: form_widget(form.budget)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header4',
                                    headerContent: form_label(form.minRate) ~ ' / ' ~ form_label(form.maxRate),
                                    bodyId: 'body4',
                                    bodyContent: form_widget(form.minRate) ~ '<br>' ~ form_widget(form.maxRate)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header5',
                                    headerContent: form_label(form.maxDuration),
                                    bodyId: 'body5',
                                    bodyContent: form_widget(form.maxDuration)
                                } %}
                                {% include "components/accordion_item.html.twig" with {
                                    accordionId: 'accordionFlushExample',
                                    headerId: 'header6',
                                    headerContent: form_label(form.number_of_persons),
                                    bodyId: 'body6',
                                    bodyContent: form_widget(form.number_of_persons)
                                } %}
                            </div>
                        </li>
                    </ul>
                </div>
                {{ form_widget(form.name) }}
                <div class="input-group-append">
                    {{ form_widget(form.submit) }}
                </div>
            </div>
            {{ form_end(form) }}
        </div>

        <hr/>

        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">{{ countRecettes }} Recettes</h1>
                <div class="row">
                    {% for recette in recettes %}
                        {% include 'components/recipe_thumbnail.html.twig' with {recipe: recette} %}
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row offset-4">
            {{ knp_pagination_render(recettes, 'pagination/pagination_template.html.twig') }}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('new_recette_home') }}
{% endblock %}
