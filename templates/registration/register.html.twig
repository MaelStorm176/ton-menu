{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}
{% block body %} 
<form class="login_content text-center d-flex flex-column" action="{{ path('login') }}" method="post">
  <div class="container-fluid login_form rounded">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-md-9 col-lg-6 col-xl-5">
        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid" alt="Sample image">
      </div>
      <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
        <form action="{{ path('login') }}" method="post">
        <p class="text-center fw-bold mx-3 mb-0 login_title">Créer mon compte</p>
        {{ form_start(registrationForm) }}
          <!-- Email input -->
          <div class="form-outline mb-4">
            {{ form_row(registrationForm.email) }}
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
            {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
          </div>

          <div class="d-flex justify-content-between align-items-center">
            <!-- Agree -->
            <div class="form-check mb-0">
              {{ form_row(registrationForm.agreeTerms) }}
            </div>
          </div>
          <div class="text-center text-lg-start mt-4 pt-2">
            {# If you want to control the URL the user is redirected to on success #}
            {# <input type="hidden" name="_target_path" value="/account"/>  #}
            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Créer mon compte</button>
            {{ form_end(registrationForm) }}
            <input type="hidden" name="_target_path" value="/login"/> 
            <p class="small fw-bold mt-2 pt-1 mb-0">Vous avez déjà un compte ?
            <a type="" href="/login">Se Connecter</a></p>
          </div>

        </form>
      </div>
    </div>
  </div>
</form>

{% endblock %}
