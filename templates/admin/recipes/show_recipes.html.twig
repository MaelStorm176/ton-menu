{% extends "admin/admin.html.twig" %}

{% block title %}Gestion des recettes{% endblock %}

{% block content %}
    <h3>Gestion des recettes</h3>
    <div class="row">
        <div class="col">
            <table id="recipesTable" class="display table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th style="width: 2%"></th>
                        <th style="width: 10%">Créateur</th>
                        <th style="width: 20%">Nom</th>
                        <th style="width: 5%">Type</th>
                        <th style="width: 5%">Personnes</th>
                        <th style="width: 5%">Difficulté</th>
                        <th style="width: 10%">Temps prépration</th>
                        <th style="width: 10%">Temps total</th>
                        <th style="width: 20%">Actions</th>
                        <th style="width: 3%"></th>
                    </tr>
                </thead>
                <tbody>
                {% for recipe in recipes %}
                    <tr id="recette_{{ recipe.id }}">
                        <td id="recette_ingredients_trigger_{{ recipe.id }}" data-id="{{ recipe.id }}"></td>
                        <td>{{ recipe.userId.email }}</td>
                        <td>
                            <span class="d-block text-truncate" style="max-width: 300px;">
                                <a href="{{ path('recipe_show',{id: recipe.id}) }}" target="_blank"> {{ recipe.name }} </a>
                            </span>
                        </td>
                        <td>{{ recipe.type }}</td>
                        <td class="text-center">{{ recipe.NumberOfPersons }}</td>
                        <td class="text-center">{{ recipe.difficulty }} / 5</td>
                        <td class="text-center">{{ recipe.PreparationTime|date("H:i") }}</td>
                        <td class="text-center">{{ recipe.TotalTime|date("H:i") }}</td>
                        <td class="text-center">
                            <a href="{{ path('recipe_show',{id: recipe.id}) }}" type="button" class="btn btn-secondary d-inline-block"><i class="fs-4 bi-eye"></i></a>
                            <button type="button" class="btn btn-secondary d-inline-block"><i class="fs-4 bi-pen"></i></button>
                            <button type="button" class="btn btn-secondary d-inline-block"><i class="fs-4 bi-trash"></i></button>
                        </td>
                        <td id="recette_ingredients_results_{{ recipe.id }}"><div style="width: 1000px;"></div></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_recipes') }}
{% endblock %}