<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
    {% for ingredient in ingredients %}
        <tr>
            <td>{{ ingredient.name }}</td>
            <td><img src="{{ ingredient.image }}" loading="lazy" alt="{{ingredient.name}}" width="100" height="100"></td>
        </tr>
    {% endfor %}
    </tbody>
</table>