{% extends "admin/admin.html.twig" %}

{% block title %} Gestion des utilisateurs {% endblock %}

{% block content %}
    <h3>Gestion des utilisateurs</h3>
    <div class="row">
        <div class="col">
            <table id="usersTable" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Mail</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.lastname }} {{ user.firstname }}</td>
                            <td>{{user.email}}</td>
                            <td>
                            {% for role in user.roles %}
                                {{ role }} <br>
                            {% endfor %}
                            </td>
                            <td class="text-center">
                                <a href="{{ path('admin_user_show',{id: user.id}) }}" type="button" class="btn btn-secondary"><i class="fs-4 bi-eye"></i></a>
                                <button type="button" class="btn btn-secondary"><i class="fs-4 bi-pen"></i></button>
                                <button type="button" class="btn btn-secondary"><i class="fs-4 bi-trash"></i></button>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('show_user') }}
{% endblock %}

