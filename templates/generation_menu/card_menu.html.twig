<div class="menu_unit rounded h-100">
    <div class="card-header">
        <h4 class="card-title text-center">
            <i class="fas fa-chart-pie mr-1"></i>
            {{ "now"| date_modify("+" ~ i ~ " day") | date("l","Europe/Paris") }}
        </h4>
    </div>

    {% if is_granted('ROLE_USER') %}
        <div class="list_content d-flex flex-column justify-content-around">
            <div id="entree_{{ index }}" class="text-center mb-3">
                {% include 'generation_menu/paragraph_menu.html.twig' with {id: entree.id, name: entree.name, img: entree.recipeImages} %}
            </div>
            <div id="plat_{{ index }}" class="text-center mb-3">
                {% include 'generation_menu/paragraph_menu.html.twig' with {id: plat.id, name: plat.name, img: plat.recipeImages} %}
            </div>
            <div id="dessert_{{ index }}" class="text-center">
                {% include 'generation_menu/paragraph_menu.html.twig' with {id: dessert.id, name: dessert.name, img: dessert.recipeImages} %}
            </div>
        </div>
    {% else %}
        <div class="list_content d-flex flex-column justify-content-around">
            <div id="entree_{{ index }}" class="text-center mb-3">
                <p>{{entree.name}}</p>
            </div>
            <div id="plat_{{ index }}" class="text-center mb-3">
                <p>{{plat.name}}</p>
            </div>
            <div id="dessert_{{ index }}" class="text-center">
                <p>{{dessert.name}}</p>
            </div>
        </div>
    {% endif %}
</div>













