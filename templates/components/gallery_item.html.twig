<div class="col-lg-3 col-md-4">
	<div class="member" style="margin-bottom: 0 !important">
		{% if recipe.recipeImages is not empty and recipe.recipeImages[0].url %}
			<img src="{{ recipe.recipeImages[0].url }}" alt="picture" class="img-fluid">
		{% else %}
			<img src="{{ asset('img/placeholder.webp') }}" alt="picture" class="img-fluid">
		{% endif %}
		<div class="member-info">
			<div class="member-info-content">
				<a href="{{ path('recipe_show', {id: recipe.id}) }}">
					<h4>{{ recipe.name }}</h4>
					<div class="d-flex flex-row justify-content-center">
						{% for i in 1..5 %}
							{% if i <= recipe.averageRating %}
								<i class="bi bi-star-fill" style="color: white"></i>
							{% else %}
								<i class="bi bi-star" style="color: black"></i>
							{% endif %}
						{% endfor %}

						<span class="mx-3">({{recipe.numberOfRating}} avis)</span>
					</div>
				</a>
			</div>
		</div>
	</div>
</div>
