<!-- Gallery item -->
<div class="col-xl-3 col-lg-4 col-md-6 mb-4">
    <div class="bg-white rounded shadow-sm h-100">
        {% if recipe.recipeImages is not empty and recipe.recipeImages[0].url %}
        <img src="{{ recipe.recipeImages[0].url }}" alt="picture" class="img-fluid card-img-top" style="width: 300px; height: 225px">
        {% else %}
        <img src="{{ asset('img/placeholder.webp') }}" alt="picture" class="img-fluid card-img-top" style="width: 300px; height: 225px">
        {% endif %}
        <div class="p-4">
            <h5 class="text-truncate">
                <a href="{{ path('recipe_show',{id: recipe.id}) }}" class="text-dark ">{{ recipe.name }}</a>
            </h5>
            <div class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-3">
                <!--<p class="small mb-0"><i class="fa fa-picture-o mr-2"></i><span class="font-weight-bold">JPG</span></p>-->
                <div class="d-flex flex-row justify-content-center">
                    {% for i in 1..5 %}
                        {% if i <= recipe.getAverageRating %}
                            <i class="bi bi-star-fill" style="color: yellow"></i>
                        {% else %}
                            <i class="bi bi-star" style="color: yellow"></i>
                        {% endif %}
                    {% endfor %}
                </div>
                <div class="badge badge-warning px-3 rounded-pill font-weight-normal text-white">{% if recipe.averageRating %} {{ recipe.averageRating }}/5 {% else %} Aucune note {% endif %}</div>
            </div>
        </div>
    </div>
</div>
<!-- End -->